{
  "manifest_version": 2,
  "name": "Mental Health Break Reminder",
  "version": "1.0",
  "description": "A Chrome extension that reminds users to take mental health breaks.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Take a break!"
  },
  "permissions": [
    "alarms"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
